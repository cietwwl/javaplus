<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping >

	<class name="org.hhhhhh.guess.hibernate.dto.UserDto" table="user">
		<id name="username" column="username"/>
		<property name="password" column="password" />
		<property name="nick" column="nick" />
		<property name="jiFen" column="jiFen" />
	</class>
	
	<class name="org.hhhhhh.guess.hibernate.dto.AnswersDto" table="answers">
		<id name="username_question_id" column="username_question_id"/>
		<property name="option_id" column="option_id" />
		<property name="round" column="round" />
		<property name="date" column="date" />
	</class>
	
	<class name="org.hhhhhh.guess.hibernate.dto.SystemKeyValueDto" table="system_key_value">
		<id name="key" column="key"/>
		<property name="value" column="value" />
	</class>
</hibernate-mapping>
